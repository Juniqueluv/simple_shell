#include <stdio.h>
#include <stdlib.h>

int main()

{
    char name[20];
    char password[20];
    char confirm_password[20];

    printf("Please enter your username: ");
    scanf("%s", &name);
    printf("please enter your password: ");
    scanf("%s", &password);
    printf("Please reconfirm your password: ");
    scanf("%s", &confirm_password);

    if ("password" == "confirm_password")
        printf("Your username is %s and your password is saved.\n", name);
    else printf("ERROR\n");

    return 0;
}
